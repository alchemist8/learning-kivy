<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, .5
        # size: "40dp", "40dp"
        # size_hint: .8, .5
        # width: "100dp"
        # height: "60dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "center_y": .5, }
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
